<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout style="@style/activity_headlayout" >

        <LinearLayout style="@style/activity_headlayout_left" >

            <include layout="@layout/layout_back" />
        </LinearLayout>

        <TextView
            style="@style/activity_headlayout_left_centertext"
            android:layout_marginLeft="@dimen/_8dp"
            android:text="@string/helpCenter" />
    </LinearLayout>

    <WebView
        android:id="@+id/help_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>