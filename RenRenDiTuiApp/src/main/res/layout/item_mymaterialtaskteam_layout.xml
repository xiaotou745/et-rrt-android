<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dip"
    android:background="@color/layout_view_content_bg"

    >
<ImageView
    android:id="@+id/iv_team_0"
    android:layout_width="@dimen/_55dp"
    android:layout_height="@dimen/_55dp"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:src="@drawable/pusher_logo"
    android:layout_marginTop="@dimen/_12.5dp"
    android:layout_marginBottom="@dimen/_12.5dp"
    android:layout_marginLeft="@dimen/_12.5dp"

    />
    <LinearLayout
        android:id="@+id/ll_team_0"
        android:layout_width="74dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:background="@color/layout_view_content_three_bg"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="资料"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_space_half"
            android:textColor="@color/tv_order_color_3"
            android:textSize="@dimen/_12sp"
            ></TextView>
        <TextView
            android:id="@+id/tv_team_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="1000条"
            android:textColor="@color/tv_order_color_1"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_space_half"
            ></TextView>
    </LinearLayout>
<!--content-->

    <LinearLayout
        android:id="@+id/ll_team_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ll_team_0"
        android:layout_toRightOf="@id/iv_team_0"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_team_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="222222222222"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/tv_order_color_1"
            ></TextView>
        <TextView
            android:id="@+id/tv_team_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3333333333333"
            android:textSize="@dimen/_12sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_5dp"
            ></TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_team_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/ll_team_0"
        android:src="@drawable/team_down"
        />
</RelativeLayout>
