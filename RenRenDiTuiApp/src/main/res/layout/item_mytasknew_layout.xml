<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dip"
    android:background="@color/layout_view_content_bg"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dip"
    >
    <ImageView
        android:id="@+id/iv_team_0"
        android:layout_width="@dimen/_55dp"
        android:layout_height="@dimen/_55dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/pusher_logo"
        android:layout_marginTop="@dimen/_12.5dp"
        android:layout_marginBottom="@dimen/_12.5dp"
        android:layout_marginLeft="@dimen/_12.5dp"
        />
    <LinearLayout
        android:id="@+id/ll_team_0"
        android:layout_width="74dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:background="@color/layout_view_content_other_bg"
        android:paddingRight="@dimen/_12.5dp"
        >
        <TextView
            android:id="@+id/tv_team_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1880.00"
            android:gravity="center_horizontal"
            android:textColor="@color/red_bg"
            android:textSize="@dimen/_16sp"
            android:layout_marginTop="@dimen/_30dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="元/条"
            android:textColor="@color/tv_order_color_2"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_10sp"
            ></TextView>
    </LinearLayout>
    <!--content-->

    <LinearLayout
        android:id="@+id/ll_team_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/ll_team_0"
        android:layout_toRightOf="@id/iv_team_0"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15dp"
        android:layout_marginTop="@dimen/_12.5dp"
        android:layout_marginBottom="@dimen/_12.5dp"
        >
        <TextView
            android:id="@+id/tv_team_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="222222222222"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/_15sp"
            android:textColor="@color/tv_order_color_1"
            ></TextView>
        <TextView
            android:id="@+id/tv_team_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="33333333333333333jsdnflknsdlkflksflsmfsfsdopfopsdfsdjfosdl/'hjhjfggfhghfghfghgfhsd3333"
            android:textSize="@dimen/_12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_5dp"
            android:textColor="@color/tv_order_color_2"
            ></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/iv_team_4"
        android:layout_width="45dip"
        android:layout_height="20dip"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
    <View
        style="@style/line_height_1"
        android:layout_marginLeft="@dimen/_12.5dp"
        ></View>
    <!-- pass-->
    <RelativeLayout
        android:id="@+id/rl_task_pass_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_12.5dp"
        android:layout_marginRight="@dimen/_12.5dp"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_bottom_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="提交资料条数"
            android:drawableLeft="@drawable/task_pass"
            android:drawablePadding="@dimen/_10dp"
            />
        <Button
            android:id="@+id/btn_bottom_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_shape_square"
            android:text="继续任务"
            android:focusable="false"
            android:layout_marginTop="@dimen/view_space_half"
            android:layout_marginBottom="@dimen/view_space_half"
            />

    </RelativeLayout>
    <!-- pass -->
    <RelativeLayout
        android:id="@+id/rl_task_pass_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_12.5dp"
        android:layout_marginRight="@dimen/_12.5dp"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_bottom_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="提交资料条数"
            android:drawableLeft="@drawable/task_pass"
            android:drawablePadding="@dimen/_10dp"
            />
        <Button
            android:id="@+id/btn_bottom_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_shape_square"
            android:text="分享二维码"
            android:focusable="false"
            android:layout_marginTop="@dimen/view_space_half"
            android:layout_marginBottom="@dimen/view_space_half"
            />

    </RelativeLayout>
    <!-- unpass -->
    <RelativeLayout
        android:id="@+id/rl_task_pass_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_12.5dp"
        android:layout_marginRight="@dimen/_12.5dp"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_bottom_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="提交资料条数"
            android:drawableLeft="@drawable/task_up_pass"
            android:drawablePadding="@dimen/_10dp"
            />
        <Button
            android:id="@+id/btn_bottom_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_shape_square"
            android:text="继续任务"
            android:focusable="false"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/view_space_half"
            android:layout_marginBottom="@dimen/view_space_half"
            />

    </RelativeLayout>
    <!-- un pass -->
    <RelativeLayout
        android:id="@+id/rl_task_pass_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_12.5dp"
        android:layout_marginRight="@dimen/_12.5dp"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_bottom_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="提交资料条数"
            android:drawableLeft="@drawable/task_up_pass"
            android:drawablePadding="@dimen/_10dp"
            />
        <Button
            android:id="@+id/btn_bottom_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_shape_square"
            android:text="分享二维码"
            android:focusable="false"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/view_space_half"
            android:layout_marginBottom="@dimen/view_space_half"
            />
    </RelativeLayout>
</LinearLayout>