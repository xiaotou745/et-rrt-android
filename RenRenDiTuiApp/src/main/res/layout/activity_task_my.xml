<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_view_bg"
    >
    <!--title-->
    <include
        android:id="@+id/task_title_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_title_height"
        layout="@layout/main_title_home_layout"
        android:layout_alignParentTop="true"
        ></include>
    <!-- bottom-->
    <include
        android:id="@+id/task_menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_menu_height"
        android:layout_alignParentBottom="true"
        layout="@layout/main_menu_layout"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/task_title_top"
        android:layout_above="@id/task_menu_bottom"
        >
    <RadioGroup
        android:id="@+id/rg_task_main"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/btn_task_through"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/through_1"
            android:textColor="@drawable/home_title_selector"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/btn_task_invalid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/invalid_1"
            android:textColor="@drawable/home_title_selector"
            android:textSize="15sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <View
            android:id="@+id/v_task_through"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#09a3b8" />

        <View
            android:id="@+id/v_task_invalid"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#09a3b8"
            android:visibility="invisible" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_task_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>
    </LinearLayout>
</RelativeLayout>