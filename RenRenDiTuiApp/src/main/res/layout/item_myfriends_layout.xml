<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/layout_view_content_bg"
    android:padding="@dimen/_12.5dp"
    >
    <ImageView
        android:id="@+id/iv_task_friend_icon"
        android:layout_width="47.5dip"
        android:layout_height="47.5dip"
        android:src="@drawable/icon_task_friend"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/tv_task_friend_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/tv_order_color_2"
        android:text="某某"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/_12.5dp"
        android:layout_toRightOf="@id/iv_task_friend_icon"
        android:layout_marginTop="@dimen/_5dp"
        />
    <TextView
        android:id="@+id/tv_task_friend_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/tv_order_color_4"
        android:text="2015"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/_12.5dp"
        android:layout_toRightOf="@id/iv_task_friend_icon"
        android:layout_below="@id/tv_task_friend_name"
        android:layout_marginTop="@dimen/_5dp"
        />
</RelativeLayout>