<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:background="@drawable/item_task_main_bg"
    >
        <ImageView
            android:id="@+id/iv_team_0"
            android:layout_width="@dimen/_55dp"
            android:layout_height="@dimen/_55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pusher_logo"
            android:layout_marginTop="@dimen/_12.5dp"
            android:layout_marginBottom="@dimen/_12.5dp"
            android:layout_marginLeft="@dimen/_12.5dp"
            />
        <LinearLayout
            android:id="@+id/ll_team_0"
            android:layout_width="74dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:background="@color/layout_view_content_other_bg"
            android:paddingRight="@dimen/_12.5dp"
            >
            <TextView
                android:id="@+id/tv_team_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1880.00"
                android:gravity="center_horizontal"
                android:textColor="@color/red_bg"
                android:textSize="@dimen/_16sp"
                android:layout_marginTop="@dimen/_30dp"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="元/条"
                android:textColor="@color/tv_order_color_2"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_10sp"
                ></TextView>
        </LinearLayout>
        <!--content-->

        <LinearLayout
            android:id="@+id/ll_team_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/ll_team_0"
            android:layout_toRightOf="@id/iv_team_0"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginRight="@dimen/_15dp"
            android:layout_marginTop="@dimen/_12.5dp"
            android:layout_marginBottom="@dimen/_12.5dp"
            >
            <TextView
                android:id="@+id/tv_team_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="222222222222"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/_15sp"
                android:textColor="@color/tv_order_color_1"
                ></TextView>
            <TextView
                android:id="@+id/tv_team_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="33333333333333333jsdnflknsdlkflksflsmfsfsdopfopsdfsdjfosdl/'hjhjfggfhghfghfghgfhsd3333"
                android:textSize="@dimen/_12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_5dp"
                android:textColor="@color/tv_order_color_2"
                ></TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_team_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/team_down"
            />
    </RelativeLayout>