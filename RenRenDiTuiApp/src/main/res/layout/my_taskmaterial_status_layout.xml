<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/layout_view_bg"
    android:orientation="vertical"
    >
    <!-- title-->
    <include
    layout="@layout/main_title_home_layout"
    ></include>

    <!-- top-->
    <RelativeLayout
        android:id="@+id/rl_flow_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/view_space_half_3_multiple"
        android:paddingLeft="@dimen/view_space_half_3_multiple"
        android:paddingRight="@dimen/view_space_half_3_multiple"
        >
        <ImageView
            android:id="@+id/iv_top_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/task_pass"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />
        <View
            android:id="@+id/view_top_line"
            android:layout_width="1dip"
            android:layout_height="@dimen/_50dp"
            android:background="@color/blue_bg"
            android:layout_below="@id/iv_top_icon"
            android:layout_marginLeft="@dimen/_6dp"
            ></View>
        <TextView
            android:id="@+id/tv_task_material_top_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_top_icon"
            android:layout_alignTop="@id/iv_top_icon"
            android:text="提交审核"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/tv_order_color_1"
            android:layout_marginLeft="@dimen/view_space"
            />
        <TextView
            android:id="@+id/tv_task_material_top_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_task_material_top_content"
            android:layout_alignLeft="@id/tv_task_material_top_content"
            android:text="2015-10-12 12:12"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/tv_order_color_1"
            android:layout_marginTop="@dimen/view_space_half"
            />

    </RelativeLayout>
    <!-- middle-->
    <RelativeLayout
        android:id="@+id/rl_flow_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/view_space_half_3_multiple"
        android:paddingLeft="@dimen/view_space_half_3_multiple"
        android:paddingRight="@dimen/view_space_half_3_multiple"
        >
        <View
            android:id="@+id/view_middle_line"
            android:layout_width="1dip"
            android:layout_height="@dimen/_50dp"
            android:background="@color/blue_bg"
            android:layout_marginLeft="@dimen/_6dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            ></View>
        <ImageView
            android:id="@+id/iv_middle_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/task_pass"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/view_middle_line"
            />
        <TextView
            android:id="@+id/tv_task_material_middle_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核通过"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/tv_order_color_1"
            android:layout_marginLeft="@dimen/view_space"
            android:layout_toRightOf="@id/iv_middle_icon"
            android:layout_alignTop="@id/iv_middle_icon"
            />
        <TextView
            android:id="@+id/tv_task_material_middle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-10-12 12:12"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/tv_order_color_1"
            android:layout_below="@id/tv_task_material_middle_content"
            android:layout_alignLeft="@id/tv_task_material_middle_content"
            />
    </RelativeLayout>
    <!-- bottom-->
    <RelativeLayout
        android:id="@+id/rl_flow_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/view_space_half_3_multiple"
        android:paddingLeft="@dimen/view_space_half_3_multiple"
        android:paddingRight="@dimen/view_space_half_3_multiple"
        >
        <View
            android:id="@+id/view_bottom_line"
            android:layout_width="1dip"
            android:layout_height="@dimen/_50dp"
            android:background="@color/blue_bg"
            android:layout_marginLeft="@dimen/_6dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            ></View>
        <ImageView
            android:id="@+id/iv_bottom_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/task_pass"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/view_bottom_line"
            />
        <TextView
            android:id="@+id/tv_task_material_bottom_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核通过"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/tv_order_color_1"
            android:layout_marginLeft="@dimen/view_space"
            android:layout_toRightOf="@id/iv_bottom_icon"
            android:layout_alignTop="@id/iv_bottom_icon"
            />
        <TextView
            android:id="@+id/tv_task_material_bottom_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-10-12 12:12"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/tv_order_color_1"
            android:layout_below="@id/tv_task_material_bottom_content"
            android:layout_alignLeft="@id/tv_task_material_bottom_content"
           />
    </RelativeLayout>
    <!-- 操作-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/view_space"
        >
        <Button
            android:id="@+id/btn_left"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="查看资料"
            android:layout_weight="1"
            style="@style/style_btn_white_shape_fill"
            android:gravity="center"
            android:layout_marginRight="5dip"/>
        <Button
            android:id="@+id/btn_right"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="再次参与"
            android:layout_weight="1"
            style="@style/style_btn_blue_shape_fill"
            android:gravity="center"
            android:layout_margin="5dip"
            />

    </LinearLayout>

</LinearLayout>
