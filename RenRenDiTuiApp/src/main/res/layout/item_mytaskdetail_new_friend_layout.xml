<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="47.5dip" android:layout_height="match_parent"
    android:orientation="vertical"
    >
<ImageView
    android:id="@+id/iv_task_friend_icon"
    android:layout_width="47.5dip"
    android:layout_height="47.5dip"
    android:src="@drawable/icon_task_friend"
    />
    <TextView
        android:id="@+id/tv_task_friend_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_12sp"
        android:textColor="@color/tv_order_color_2"
        android:text="推手"
        android:singleLine="true"
        android:ellipsize="end"
        />
</LinearLayout>
