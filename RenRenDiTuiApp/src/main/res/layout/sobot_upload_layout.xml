<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sobot_color_bottom_bg"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="2" >

    <RelativeLayout
        android:id="@+id/sobot_btn_picture_r"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/sobot_btn_picture"
            android:layout_width="@dimen/sobot_DIMEN_288PX"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/sobot_img_upload"
            android:drawableLeft="@drawable/sobot_uploadpicture"
            android:drawablePadding="@dimen/sobot_DIMEN_14PX"
            android:textColor="@color/sobot_color_bottom_upload_btn_color"
            android:text="@string/sobot_upload"
            android:textSize="@dimen/sobot_text_font_small" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sobot_btn_take_picture_r"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/sobot_btn_take_picture"
            android:layout_width="@dimen/sobot_DIMEN_288PX"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/sobot_img_upload"
            android:drawableLeft="@drawable/sobot_takephoto"
            android:drawablePadding="@dimen/sobot_DIMEN_14PX"
            android:textColor="@color/sobot_color_bottom_upload_btn_color"
            android:paddingLeft="@dimen/sobot_DIMEN_72PX"
            android:text="@string/sobot_attach_take_pic"
            android:textSize="@dimen/sobot_text_font_small" />
    </RelativeLayout>

</LinearLayout>