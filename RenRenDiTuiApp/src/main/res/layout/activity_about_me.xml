<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout style="@style/activity_headlayout" >

        <LinearLayout style="@style/activity_headlayout_left" >

            <include layout="@layout/layout_back" />
        </LinearLayout>

        <TextView
            style="@style/activity_headlayout_left_centertext"
            android:layout_marginLeft="@dimen/_8dp"
            android:text="@string/aboutme" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_button_selector"
        android:paddingBottom="@dimen/_10dp"
        android:paddingLeft="@dimen/_20dp"
        android:paddingTop="@dimen/_10dp"
        android:text="帮助中心"
        android:textSize="@dimen/_16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#11000000"
        android:layerType="software" />

    <TextView
        android:id="@+id/tv_customer_service_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_button_selector"
        android:paddingBottom="@dimen/_10dp"
        android:paddingLeft="@dimen/_20dp"
        android:paddingTop="@dimen/_10dp"
        android:text="客服支持"
        android:textSize="@dimen/_16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:background="#11000000" />

    <RelativeLayout
        android:id="@+id/tv_version_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_button_selector"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/_10dp"
        android:paddingLeft="@dimen/_20dp"
        android:paddingTop="@dimen/_10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新"
            android:textSize="@dimen/_16sp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15dp"
            android:textSize="@dimen/_16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#22000000"
        android:layerType="software" />

</LinearLayout>