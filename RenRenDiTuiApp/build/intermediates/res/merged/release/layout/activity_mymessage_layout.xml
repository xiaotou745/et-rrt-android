<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/layout_bg_color"
    android:orientation="vertical"
    >
    <RelativeLayout style="@style/activity_headlayout" >

        <LinearLayout style="@style/activity_headlayout_left" >

            <include layout="@layout/layout_back" />
        </LinearLayout>

        <TextView
            style="@style/activity_headlayout_center_centertext"
            android:text="@string/message_title_content" />
    </RelativeLayout>
    <!-- 消息列表-->
    <com.renrentui.controls.PullToRefreshView
        android:id="@+id/pulltorefresh_message_taskList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <ListView
            android:id="@+id/lv_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10dp"
            android:divider="#e8e8e8"
            android:dividerHeight="@dimen/_10dp"
            android:fadingEdge="none"
            android:listSelector="@color/white"
            android:scrollbars="none" >
        </ListView>
    </com.renrentui.controls.PullToRefreshView>

    <include layout="@layout/layout_nodata" />

</LinearLayout>
