<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/view_space"
    >

    <ImageView
        android:id="@+id/iv_team_image_pic_item"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/add_image"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/tv_team_images_title_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片简介"
        android:textColor="@color/tv_order_color_1"
        android:textSize="@dimen/_14sp"
        android:gravity="left"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_team_image_pic_item"
        android:layout_marginRight="@dimen/view_space"
        />
</RelativeLayout>
